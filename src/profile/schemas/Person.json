{
	"$schema": "http://json-schema.org/schema#",
	"allOf": [
		{
			"$ref": "Profile.json"
		},
		{
			"type": "object",
			"properties": {
				"name": { "type": "string" },
				"givenName": { "type": "string" },
				"familyName": { "type": "string" },
				"description": { "type": "string" },
				"image": {
					"type": "array",
					"items": {
						"allOf": [{ "$ref": "components/Image.json" }]
					}
				},
				"website": {
					"type": "array",
					"items": {
						"allOf": [{ "$ref": "components/WebSite.json" }]
					}
				},
				"account": {
					"type": "array",
					"items": {
						"allOf": [{ "$ref": "components/Account.json" }]
					}
				},
				"knows": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"@type": { "type": "string" },
							"@id": { "type": "string" }
						}
					}
				},
				"worksFor": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"@type": { "type": "string" },
							"@id": { "type": "string" }
						}
					}
				},
				"address": {
					"allOf": [{ "$ref": "components/PostalAddress.json" }]
				},
				"birthDate": { "type": "string" },
				"taxID": { "type": "string" },
				"apps": {
					"type": "object",
					"additionalProperties": { "type": "string" }
				}
			}
		}
	]
}
